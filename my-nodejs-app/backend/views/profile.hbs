{{!-- profile.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>{{title}}</title>
</head>
<body>
    {{> header}}

    <main>
        <div class="profile-container">
            <h1 style="color: {{user.user_color}}">{{user.display_name}}</h1>
            
            {{#if isOwnProfile}}
                <p><em>This is your profile</em></p>
                <a href="/profile/editProfile">Edit Profile</a>
            {{/if}}
            
            <div class="profile-info">
                <p><strong>Username:</strong> {{user.username}}</p>
                <p><strong>Member since:</strong> {{user.created_at}}</p>
                <p><strong>Total comments:</strong> {{comments.length}}</p>
            </div>

            <h2>Comments by {{user.display_name}}</h2>
            
            <div class="user-comments">
                {{#if comments.length}}
                    {{#each comments}}
                    <div class="comment">
                        <div class="comment-header">
                            <span class="comment-date">{{this.created_at}}</span>
                        </div>
                        <div class="comment-text">
                            {{this.content}}
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <p>No comments yet.</p>
                {{/if}}
            </div>
        </div>
    </main>

    {{> footer}}
</body>
</html>