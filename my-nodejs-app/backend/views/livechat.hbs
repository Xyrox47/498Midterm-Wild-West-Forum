<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Chat - Wild West Forum</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .chat-container {
            max-width: 800px;
            width: 100%;
            margin: 0 auto;
            background: white;
            display: flex;
            flex-direction: column;
            height: 100vh;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        
        .chat-header {
            background: #2c3e50;
            color: white;
            padding: 20px;
            text-align: center;
        }
        
        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .message {
            padding: 10px 15px;
            border-radius: 8px;
            background: #f0f0f0;
            max-width: 80%;
            word-wrap: break-word;
        }
        
        .message-author {
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .message-time {
            font-size: 0.8em;
            color: #666;
            margin-top: 5px;
        }
        
        .chat-input-container {
            padding: 20px;
            background: #ecf0f1;
            border-top: 1px solid #ddd;
        }
        
        .chat-input-form {
            display: flex;
            gap: 10px;
        }
        
        #messageInput {
            flex: 1;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }
        
        #sendButton {
            padding: 12px 30px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }
        
        #sendButton:hover {
            background: #2980b9;
        }
        
        #sendButton:disabled {
            background: #95a5a6;
            cursor: not-allowed;
        }
        
        .status {
            padding: 10px;
            text-align: center;
            background: #e74c3c;
            color: white;
        }
        
        .status.connected {
            background: #27ae60;
        }
        
        .error {
            padding: 10px;
            background: #e74c3c;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h1>Live Chat</h1>
            <p><a href="/" style="color: white;">‚Üê Back to Home</a></p>
        </div>
        
        <div id="status" class="status">Connecting...</div>
        <div id="error" class="error" style="display: none;"></div>
        
        <div id="messages" class="chat-messages">
        </div>
        
        <div class="chat-input-container">
            <form id="chatForm" class="chat-input-form">
                <input 
                    type="text" 
                    id="messageInput" 
                    placeholder="Type a message..." 
                    maxlength="1000"
                    autocomplete="off"
                    disabled
                >
                <button type="submit" id="sendButton" disabled>Send</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script>
        const messagesDiv = document.getElementById('messages');
        const statusDiv = document.getElementById('status');
        const errorDiv = document.getElementById('error');
        const messageInput = document.getElementById('messageInput');
        const sendButton = document.getElementById('sendButton');
        const chatForm = document.getElementById('chatForm');
        
        let socket = null;
        
        // Connect to Socket.IO
        function connectSocket() {
            socket = io({
                withCredentials: true
            });
            
            socket.on('connect', () => {
                console.log('Connected to chat');
                statusDiv.textContent = 'Connected';
                statusDiv.className = 'status connected';
                messageInput.disabled = false;
                sendButton.disabled = false;
                loadChatHistory();
            });
            
            socket.on('disconnect', () => {
                console.log('Disconnected from chat');
                statusDiv.textContent = 'Disconnected';
                statusDiv.className = 'status';
                messageInput.disabled = true;
                sendButton.disabled = true;
            });
            
            socket.on('error', (error) => {
                showError(error.message || 'Connection error');
            });
            
            socket.on('chat:newMessage', (message) => {
                addMessage(message);
            });
            
            socket.on('chat:error', (data) => {
                showError(data.error);
            });
        }
        
        // Load chat history
        async function loadChatHistory() {
            try {
                const response = await fetch('/api/chat/history?limit=50', {
                    credentials: 'include'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    messagesDiv.innerHTML = ''; 
                    data.messages.forEach(msg => addMessage(msg, false));
                    scrollToBottom();
                }
            } catch (error) {
                showError('Failed to load chat history');
            }
        }
        
        // Add message to chat
        function addMessage(message, scroll = true) {
            const messageEl = document.createElement('div');
            messageEl.className = 'message';
            
            const time = new Date(message.created_at).toLocaleTimeString();
            
            messageEl.innerHTML = `
                <div class="message-author" style="color: ${message.user_color || '#000000'}">
                    ${escapeHtml(message.display_name)}
                </div>
                <div>${escapeHtml(message.content)}</div>
                <div class="message-time">${time}</div>
            `;
            
            messagesDiv.appendChild(messageEl);
            
            if (scroll) {
                scrollToBottom();
            }
        }
        
        // Send message
        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const message = messageInput.value.trim();
            
            if (!message) return;
            
            socket.emit('chat:message', { message });
            messageInput.value = '';
            messageInput.focus();
        });
        
        // Helper functions
        function scrollToBottom() {
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }
        
        function showError(message) {
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 3000);
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Connect to socket once loaded
        connectSocket();
    </script>
</body>
</html>